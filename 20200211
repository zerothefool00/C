/*
#include<stdio.h>

int main(void)
{
	FILE * src;
	FILE * des;
	char *cpSrcFile = "src.txt";
	char *cpDstFile = "dst.txt";
	int ch;

	src = fopen(cpSrcFile, "rt");
	if (src == NULL)
	{
		printf("[%s] 파일오픈 실패!\n", cpSrcFile);
		return 101;
	}

	des = fopen(cpDstFile, "wt");
	if (des == NULL)
	{
		fclose(src);
		printf("[%s] 파일오픈 실패!\n", cpDstFile);
		return 102;
	}

	for (;;)
	{
		ch = fgetc(src);
		if (EOF == ch)
		{
			break;
		}
		fputc(ch, des);
	}

	if (feof(src) != 0) // src 파일의 끝에 도달한 경우
	{
		puts("파일복사 완료!");
	}
	else // src 파일의 끝에 도달하지 않은 경우
	{
		puts("파일복사 실패!");
	}

	fclose(src);
	fclose(des);

	return 0;
}
*/

/*
//문제 생김!
#include <stdio.h>

int main(void)
{
	FILE * src = fopen("src.bin", "rb");
	FILE * des = fopen("dst.bin", "wb");
	char buf[20];
	int readCnt;

	if (src == NULL)
	{
		puts("파일오픈 실패!");
		return -1;
	}
	if (des == NULL)
	{
		fclose(src);
		puts("파일오픈 실패!");
		return -1;
	}
	while (1)
	{
		readCnt = fread((void*)buf, 1, sizeof(buf), src);

		if (readCnt < sizeof(buf))
		{
			if (feof(src) != 0)
			{
				fwrite((void*)buf, 1, readCnt, des);
				puts("파일복사 완료");
				break;
			}
			else
			{
				puts("파일복사 실패");

				break;
			}
		}
	}return 0;
}
*/
